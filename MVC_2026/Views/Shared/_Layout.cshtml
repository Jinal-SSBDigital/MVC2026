<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Museum Explorer</title>

    <!-- Google Fonts - Ancient & Elegant -->
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500;600;700&family=Cormorant+Garamond:wght@300;400;500;600;700&family=Lora:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        /* ===== CSS RESET ===== */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* ===== ROOT VARIABLES - ANCIENT AESTHETIC ===== */
        :root {
            --primary-color: #3d2914;
            --secondary-color: #8b7355;
            --accent-color: #c9a86a;
            --gold: #d4af37;
            --bronze: #b87333;
            --terracotta: #a0705a;
            --text-dark: #2c2416;
            --text-medium: #5a4a3a;
            --text-light: #7a6f5d;
            --bg-cream: #faf8f3;
            --bg-parchment: #f5f1e8;
            --bg-sand: #e8dcc4;
            --white: #ffffff;
            --shadow: 0 8px 24px rgba(61, 41, 20, 0.08);
            --shadow-lg: 0 16px 48px rgba(61, 41, 20, 0.12);
            --shadow-gold: 0 8px 32px rgba(212, 175, 55, 0.2);
            --transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            --font-display: 'Cinzel', serif;
            --font-heading: 'Cormorant Garamond', serif;
            --font-body: 'Lora', serif;
        }

        /* ===== GLOBAL STYLES ===== */
        body {
            font-family: var(--font-body);
            line-height: 1.8;
            color: var(--text-dark);
            background-color: var(--bg-cream);
            background-image: radial-gradient(circle at 20% 80%, rgba(201, 168, 106, 0.03) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(139, 115, 85, 0.03) 0%, transparent 50%);
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: var(--font-heading);
            font-weight: 600;
            line-height: 1.3;
            color: var(--primary-color);
        }

        a {
            text-decoration: none;
            color: inherit;
            transition: var(--transition);
        }

        img {
            max-width: 100%;
            height: auto;
            display: block;
        }

        /* ===== DECORATIVE ELEMENTS ===== */
        .ornament {
            display: inline-block;
            color: var(--gold);
            margin: 0 0.5rem;
            font-size: 0.8em;
        }

        .divider {
            width: 80px;
            height: 3px;
            background: linear-gradient(to right, transparent, var(--gold), transparent);
            margin: 1.5rem auto;
        }

        /* ===== NAVIGATION BAR ===== */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: rgba(250, 248, 243, 0.98);
            backdrop-filter: blur(12px);
            box-shadow: 0 2px 16px rgba(61, 41, 20, 0.06);
            z-index: 1000;
            transition: var(--transition);
            border-bottom: 2px solid rgba(201, 168, 106, 0.15);
        }

            .navbar.scrolled {
                box-shadow: 0 4px 24px rgba(61, 41, 20, 0.12);
                background: rgba(250, 248, 243, 1);
            }

        .nav-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 85px;
        }

        .logo {
            font-family: var(--font-display);
            font-size: 1.6rem;
            font-weight: 700;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            gap: 0.7rem;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

            .logo i {
                color: var(--gold);
                font-size: 1.8rem;
                filter: drop-shadow(0 2px 4px rgba(212, 175, 55, 0.3));
            }

        .nav-menu {
            display: flex;
            list-style: none;
            gap: 2.5rem;
            align-items: center;
        }

        .nav-link {
            color: var(--text-medium);
            font-weight: 500;
            font-size: 0.95rem;
            position: relative;
            padding: 0.5rem 0;
            font-family: var(--font-heading);
            letter-spacing: 0.5px;
        }

            .nav-link::after {
                content: '';
                position: absolute;
                bottom: -2px;
                left: 50%;
                transform: translateX(-50%);
                width: 0;
                height: 2px;
                background: linear-gradient(to right, var(--gold), var(--bronze));
                transition: var(--transition);
            }

            .nav-link:hover::after {
                width: 100%;
            }

            .nav-link:hover {
                color: var(--gold);
            }

        .btn-primary {
            background: linear-gradient(135deg, var(--gold), var(--bronze));
            color: var(--primary-color);
            padding: 0.7rem 2rem;
            border-radius: 4px;
            font-weight: 600;
            border: 2px solid var(--gold);
            cursor: pointer;
            transition: var(--transition);
            box-shadow: var(--shadow-gold);
            font-family: var(--font-heading);
            letter-spacing: 1px;
            text-transform: uppercase;
            font-size: 0.85rem;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 40px rgba(212, 175, 55, 0.3);
                background: linear-gradient(135deg, var(--bronze), var(--gold));
            }

        .menu-toggle {
            display: none;
            flex-direction: column;
            gap: 5px;
            cursor: pointer;
            padding: 5px;
        }

            .menu-toggle span {
                width: 25px;
                height: 2px;
                background: var(--gold);
                border-radius: 2px;
                transition: var(--transition);
            }

        /* ===== MAIN CONTENT ===== */
        main {
            margin-top: 85px;
            min-height: calc(100vh - 85px);
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        /* ===== FOOTER ===== */
        .footer {
            background: linear-gradient(180deg, var(--primary-color) 0%, #2c2416 100%);
            color: var(--bg-cream);
            padding: 5rem 0 2rem;
            margin-top: 6rem;
            position: relative;
            border-top: 3px solid var(--gold);
        }

            .footer::before {
                content: '';
                position: absolute;
                top: -3px;
                left: 0;
                right: 0;
                height: 3px;
                background: repeating-linear-gradient( 90deg, var(--gold) 0px, var(--gold) 10px, transparent 10px, transparent 20px );
            }

        .footer-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 3rem;
            margin-bottom: 3rem;
        }

        .footer-section h3 {
            font-family: var(--font-display);
            font-size: 1.2rem;
            margin-bottom: 1.5rem;
            color: var(--gold);
            letter-spacing: 2px;
            text-transform: uppercase;
            position: relative;
            display: inline-block;
        }

            .footer-section h3::after {
                content: '';
                position: absolute;
                bottom: -8px;
                left: 0;
                width: 50px;
                height: 2px;
                background: linear-gradient(to right, var(--gold), transparent);
            }

        .footer-section p,
        .footer-section a {
            color: rgba(250, 248, 243, 0.8);
            margin-bottom: 0.8rem;
            display: block;
            font-size: 0.95rem;
            transition: var(--transition);
        }

            .footer-section a:hover {
                color: var(--gold);
                padding-left: 8px;
            }

            .footer-section p i {
                color: var(--gold);
                margin-right: 0.5rem;
                width: 20px;
            }

        .social-links {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
        }

            .social-links a {
                width: 45px;
                height: 45px;
                background: rgba(212, 175, 55, 0.1);
                border: 2px solid rgba(212, 175, 55, 0.3);
                border-radius: 4px;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: var(--transition);
                color: var(--gold);
            }

                .social-links a:hover {
                    background: var(--gold);
                    color: var(--primary-color);
                    transform: translateY(-4px);
                    box-shadow: var(--shadow-gold);
                }

        .footer-bottom {
            border-top: 1px solid rgba(212, 175, 55, 0.2);
            padding-top: 2rem;
            text-align: center;
            color: rgba(250, 248, 243, 0.5);
            font-size: 0.9rem;
        }

        /* ===== RESPONSIVE DESIGN ===== */
        @@media (max-width: 968px) {
            .nav-menu

        {
            position: fixed;
            left: -100%;
            top: 85px;
            flex-direction: column;
            background: var(--bg-cream);
            width: 100%;
            text-align: center;
            transition: 0.3s;
            box-shadow: 0 10px 27px rgba(61, 41, 20, 0.1);
            padding: 2rem 0;
            gap: 1.5rem;
            border-top: 2px solid rgba(201, 168, 106, 0.2);
        }

        .nav-menu.active {
            left: 0;
        }

        .menu-toggle {
            display: flex;
        }

        .nav-container {
            padding: 0 1.5rem;
        }

        .container {
            padding: 0 1.5rem;
        }

        .logo {
            font-size: 1.3rem;
        }

        }

        /* ===== UTILITY CLASSES ===== */
        .text-center {
            text-align: center;
        }

        .text-gold {
            color: var(--gold);
        }

        .mt-1 {
            margin-top: 1rem;
        }

        .mt-2 {
            margin-top: 2rem;
        }

        .mt-3 {
            margin-top: 3rem;
        }

        .mb-1 {
            margin-bottom: 1rem;
        }

        .mb-2 {
            margin-bottom: 2rem;
        }

        .mb-3 {
            margin-bottom: 3rem;
        }

        /* ===== ANCIENT DECORATIVE PATTERNS ===== */
        .pattern-border {
            border-top: 2px solid var(--gold);
            border-bottom: 2px solid var(--gold);
            padding: 1rem 0;
            background-image: repeating-linear-gradient( 0deg, transparent, transparent 2px, rgba(201, 168, 106, 0.05) 2px, rgba(201, 168, 106, 0.05) 4px );
        }
    </style>

    @RenderSection("styles", required: false)
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar" id="navbar">
        <div class="nav-container">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <i class="fas fa-landmark"></i>
                <span>Museum</span>
            </a>

            <ul class="nav-menu" id="navMenu">
                <li><a href="@Url.Action("Index", "Home")" class="nav-link">Home</a></li>
                <li><a href="@Url.Action("Museums", "Home")" class="nav-link">Museums</a></li>
                <li><a href="@Url.Action("VirtualTours", "Home")" class="nav-link">Virtual Tours</a></li>
                <li><a href="@Url.Action("Artefacts", "Home")" class="nav-link">Artefacts</a></li>
                <li><a href="@Url.Action("About", "Home")" class="nav-link">About</a></li>
                <li><a href="@Url.Action("Contact", "Home")" class="nav-link">Contact</a></li>
                @* <li><button class="btn-primary" onclick="location.href='@Url.Action("Login", "Account")'">Login</button></li> *@
                <!-- Add this in your navbar -->
                <div class="nav-right">
                    @if (!string.IsNullOrEmpty(Context.Session.GetString("UserEmail")))
                    {
                        <div class="user-menu" style="display: flex; align-items: center; gap: 15px;">
                            <span style="color: var(--gold); font-weight: 500;">
                                <i class="fas fa-user-circle"></i>
                                @Context.Session.GetString("UserEmail")
                            </span>
                            <a href="@Url.Action("Logout", "Account")"
                               class="btn-logout"
                               style="padding: 10px 24px; background: linear-gradient(135deg, var(--gold), var(--bronze)); color: var(--primary-color); border-radius: 4px; text-decoration: none; font-weight: 600; transition: all 0.3s;">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    }
                    else
                    {
                        <button onclick="openLoginModal()"
                                class="btn-login"
                                style="padding: 10px 24px; background: linear-gradient(135deg, var(--gold), var(--bronze)); color: var(--primary-color); border: none; border-radius: 4px; cursor: pointer; font-weight: 600; transition: all 0.3s;">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </button>
                    }
                </div>
            </ul>

            <div class="menu-toggle" id="menuToggle">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Museum Explorer</h3>
                <p>Preserving history, inspiring futures. Discover ancient artefacts and immerse yourself in the timeless beauty of world-class museums.</p>
                <div class="social-links">
                    <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                    <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                    <a href="#" aria-label="YouTube"><i class="fab fa-youtube"></i></a>
                </div>
            </div>

            <div class="footer-section">
                <h3>Explore</h3>
                <a href="@Url.Action("Museums", "Home")">Browse Museums</a>
                <a href="@Url.Action("VirtualTours", "Home")">Virtual Tours</a>
                <a href="@Url.Action("Artefacts", "Home")">Ancient Artefacts</a>
                <a href="@Url.Action("BookTickets", "Home")">Book Tickets</a>
            </div>

            <div class="footer-section">
                <h3>Information</h3>
                <a href="@Url.Action("About", "Home")">About Us</a>
                <a href="@Url.Action("Contact", "Home")">Contact</a>
                <a href="@Url.Action("FAQ", "Home")">FAQ</a>
                <a href="@Url.Action("Privacy", "Home")">Privacy Policy</a>
            </div>

            <div class="footer-section">
                <h3>Contact</h3>
                <p><i class="fas fa-map-marker-alt"></i> 123 Heritage Lane, Cultural District</p>
                <p><i class="fas fa-phone"></i> +1 234 567 8900</p>
                <p><i class="fas fa-envelope"></i> heritage@museum.com</p>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="container">
                <p>&copy; @DateTime.Now.Year Museum Explorer. Preserving History, Inspiring Discovery.</p>
            </div>
        </div>
    </footer>

    <script>
        // Mobile Menu Toggle
        const menuToggle = document.getElementById('menuToggle');
        const navMenu = document.getElementById('navMenu');

        menuToggle.addEventListener('click', () => {
            navMenu.classList.toggle('active');
        });

        // Navbar scroll effect
        const navbar = document.getElementById('navbar');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', (e) => {
            if (!e.target.closest('.nav-container')) {
                navMenu.classList.remove('active');
            }
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
