@{
    ViewBag.Title = "Virtual Tours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <style>
        /* ===== VIRTUAL TOURS PAGE STYLES ===== */
        .tours-hero {
            background: linear-gradient(135deg, rgba(61, 41, 20, 0.92), rgba(90, 74, 58, 0.88)), url('https://images.unsplash.com/photo-1604079628040-94301bb21b91?q=80&w=2000') center/cover fixed;
            padding: 8rem 0 5rem;
            color: var(--bg-cream);
            text-align: center;
            position: relative;
            border-bottom: 3px solid var(--gold);
        }

            .tours-hero::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 3px;
                background: repeating-linear-gradient(90deg, var(--gold) 0px, var(--gold) 12px, transparent 12px, transparent 24px);
            }

            .tours-hero h1 {
                font-family: var(--font-display);
                font-size: 4rem;
                color: var(--bg-cream);
                margin-bottom: 1rem;
                letter-spacing: 3px;
                text-transform: uppercase;
            }

        /* Featured Tour Section */
        .featured-tour {
            background: var(--bg-parchment);
            padding: 5rem 0;
            position: relative;
            overflow: hidden;
        }

            .featured-tour::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 100%;
                background: repeating-linear-gradient(45deg, transparent, transparent 35px, rgba(201, 168, 106, 0.02) 35px, rgba(201, 168, 106, 0.02) 70px);
                pointer-events: none;
            }

        .featured-content {
            display: grid;
            grid-template-columns: 1.2fr 1fr;
            gap: 4rem;
            align-items: center;
            position: relative;
            z-index: 1;
        }

        .featured-image-container {
            position: relative;
            border-radius: 4px;
            overflow: hidden;
            box-shadow: var(--shadow-lg);
            border: 3px solid var(--gold);
        }

        .featured-image {
            width: 100%;
            height: 500px;
            object-fit: cover;
            transition: var(--transition);
        }

        .featured-image-container:hover .featured-image {
            transform: scale(1.05);
        }

        .featured-badge {
            position: absolute;
            top: 20px;
            left: 20px;
            padding: 0.7rem 1.5rem;
            background: linear-gradient(135deg, var(--gold), var(--bronze));
            color: var(--primary-color);
            border-radius: 4px;
            font-weight: 700;
            font-family: var(--font-heading);
            letter-spacing: 1px;
            text-transform: uppercase;
            box-shadow: var(--shadow-gold);
            z-index: 2;
        }

        .play-button {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 90px;
            height: 90px;
            background: rgba(212, 175, 55, 0.95);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary-color);
            font-size: 2rem;
            cursor: pointer;
            transition: var(--transition);
            border: 4px solid var(--white);
            box-shadow: 0 8px 32px rgba(212, 175, 55, 0.5);
            z-index: 2;
        }

            .play-button:hover {
                transform: translate(-50%, -50%) scale(1.1);
                background: var(--gold);
            }

        .featured-info h2 {
            font-family: var(--font-display);
            font-size: 3rem;
            color: var(--primary-color);
            margin-bottom: 1.5rem;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .featured-meta {
            display: flex;
            gap: 2rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--text-medium);
            font-family: var(--font-heading);
        }

            .meta-item i {
                color: var(--gold);
                font-size: 1.1rem;
            }

        .featured-description {
            color: var(--text-medium);
            line-height: 1.9;
            margin-bottom: 2.5rem;
            font-size: 1.1rem;
        }

        .tour-features {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            margin-bottom: 2.5rem;
        }

        .tour-feature {
            display: flex;
            align-items: center;
            gap: 0.7rem;
            color: var(--text-dark);
            font-weight: 500;
        }

            .tour-feature i {
                color: var(--gold);
            }

        /* Tours Grid */
        .tours-section {
            padding: 6rem 0;
            background: var(--bg-cream);
        }

        .tours-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
            gap: 3rem;
            margin-top: 3rem;
        }

        .tour-card {
            background: var(--white);
            border-radius: 4px;
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: var(--transition);
            border: 2px solid transparent;
            position: relative;
        }

            .tour-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(to right, var(--gold), var(--bronze));
                transform: scaleX(0);
                transition: var(--transition);
                z-index: 1;
            }

            .tour-card:hover {
                transform: translateY(-8px);
                box-shadow: var(--shadow-lg);
                border-color: rgba(212, 175, 55, 0.3);
            }

                .tour-card:hover::before {
                    transform: scaleX(1);
                }

        .tour-image-wrapper {
            position: relative;
            overflow: hidden;
            height: 280px;
        }

        .tour-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: var(--transition);
        }

        .tour-card:hover .tour-image {
            transform: scale(1.08);
        }

        .tour-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to top, rgba(61, 41, 20, 0.8), transparent);
            display: flex;
            align-items: flex-end;
            padding: 1.5rem;
            opacity: 0;
            transition: var(--transition);
        }

        .tour-card:hover .tour-overlay {
            opacity: 1;
        }

        .tour-type {
            position: absolute;
            top: 15px;
            right: 15px;
            padding: 0.5rem 1.2rem;
            background: rgba(212, 175, 55, 0.95);
            color: var(--primary-color);
            border-radius: 4px;
            font-weight: 700;
            font-size: 0.75rem;
            letter-spacing: 1px;
            text-transform: uppercase;
            backdrop-filter: blur(10px);
        }

        .tour-duration {
            position: absolute;
            bottom: 15px;
            left: 15px;
            padding: 0.5rem 1rem;
            background: rgba(250, 248, 243, 0.95);
            color: var(--primary-color);
            border-radius: 4px;
            font-weight: 600;
            font-size: 0.85rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .tour-duration i {
                color: var(--gold);
            }

        .tour-body {
            padding: 2rem;
        }

            .tour-body h3 {
                font-family: var(--font-display);
                font-size: 1.5rem;
                color: var(--primary-color);
                margin-bottom: 1rem;
                letter-spacing: 1px;
            }

            .tour-body p {
                color: var(--text-medium);
                line-height: 1.8;
                margin-bottom: 1.5rem;
            }

        .tour-stats {
            display: flex;
            justify-content: space-between;
            padding-top: 1.5rem;
            border-top: 1px solid rgba(201, 168, 106, 0.2);
        }

        .stat-item {
            text-align: center;
        }

            .stat-item .number {
                display: block;
                font-family: var(--font-display);
                font-size: 1.3rem;
                font-weight: 700;
                color: var(--gold);
                margin-bottom: 0.3rem;
            }

            .stat-item .label {
                font-size: 0.8rem;
                color: var(--text-light);
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

        .btn-start-tour {
            width: 100%;
            padding: 1rem;
            background: linear-gradient(135deg, var(--gold), var(--bronze));
            color: var(--primary-color);
            border: none;
            border-radius: 4px;
            font-weight: 700;
            cursor: pointer;
            transition: var(--transition);
            font-family: var(--font-heading);
            letter-spacing: 1px;
            text-transform: uppercase;
            margin-top: 1.5rem;
            box-shadow: var(--shadow-gold);
        }

            .btn-start-tour:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 32px rgba(212, 175, 55, 0.35);
            }

        /* Responsive */
        @@media (max-width: 968px) {
            .featured-content

        {
            grid-template-columns: 1fr;
        }

        .tours-grid {
            grid-template-columns: 1fr;
        }

        .tours-hero h1 {
            font-size: 2.5rem;
        }

        .featured-info h2 {
            font-size: 2rem;
        }

        .tour-features {
            grid-template-columns: 1fr;
        }

        }
    </style>
}

