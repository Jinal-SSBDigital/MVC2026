@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Welcome Toast after successful login *@
@if (TempData["LoginSuccess"] != null && (bool)TempData["LoginSuccess"])
{
    <div id="welcomeToast" class="welcome-toast">
        <div class="toast-content">
            <i class="fas fa-check-circle"></i>
            <div class="toast-message">
                <strong>Login Successful!</strong>
                <span>@TempData["WelcomeMessage"]</span>
            </div>
            <button onclick="closeToast()" class="toast-close">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
}

@* Logout Message *@
@if (TempData["LogoutMessage"] != null)
{
    <div id="logoutToast" class="logout-toast">
        <div class="toast-content">
            <i class="fas fa-info-circle"></i>
            <div class="toast-message">
                <strong>Logged Out</strong>
                <span>@TempData["LogoutMessage"]</span>
            </div>
            <button onclick="closeLogoutToast()" class="toast-close">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
}

