            border-bottom: 3px solid var(--gold);
        }

            .cta-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(212, 175, 55, 0.03) 10px, rgba(212, 175, 55, 0.03) 20px);
                pointer-events: none;
            }

        .cta-content {
            max-width: 750px;
            margin: 0 auto;
            position: relative;
            z-index: 1;
        }

        .cta-ornament {
            color: var(--gold);
            font-size: 3rem;
            margin-bottom: 1.5rem;
            opacity: 0.9;
        }

        .cta-content h2 {
            font-family: var(--font-display);
            font-size: 3.2rem;
            margin-bottom: 2rem;
            letter-spacing: 2px;
            text-transform: uppercase;
