@section scripts {
    <script>
        // View toggle functionality
        const gridView = document.getElementById('gridView');
        const listView = document.getElementById('listView');
        const container = document.getElementById('artefactsContainer');

        gridView.addEventListener('click', function() {
            gridView.classList.add('active');
            listView.classList.remove('active');
            container.className = 'artefacts-grid';
        });

        listView.addEventListener('click', function() {
            listView.classList.add('active');
            gridView.classList.remove('active');
            container.className = 'artefacts-list';

            // Convert cards to list items
            const cards = container.querySelectorAll('.artefact-card');
            cards.forEach(card => {
                card.classList.add('artefact-list-item');
            });
        });

        // Filter functionality
        const filters = document.querySelectorAll('.filter-select');
        filters.forEach(filter => {
            filter.addEventListener('change', function() {
                console.log('Filter changed:', this.value);
                // Implement filter logic here
            });
        });
    </script>
}
