@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <style>
        /* ===== CONTACT PAGE STYLES ===== */
        .contact-hero {
            background: linear-gradient(135deg, rgba(61, 41, 20, 0.93), rgba(90, 74, 58, 0.88)), url('https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?q=80&w=2000') center/cover fixed;
            padding: 8rem 0 5rem;
            color: var(--bg-cream);
            text-align: center;
            position: relative;
            border-bottom: 3px solid var(--gold);
        }

            .contact-hero::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 3px;
                background: repeating-linear-gradient(90deg, var(--gold) 0px, var(--gold) 12px, transparent 12px, transparent 24px);
            }

            .contact-hero h1 {
                font-family: var(--font-display);
                font-size: 4rem;
                color: var(--bg-cream);
                margin-bottom: 1rem;
                letter-spacing: 3px;
                text-transform: uppercase;
            }

        /* Contact Content */
        .contact-content {
            padding: 6rem 0;
            background: var(--bg-parchment);
        }

        .contact-grid {
            display: grid;
            grid-template-columns: 1.2fr 1fr;
            gap: 5rem;
            margin-top: 3rem;
        }

        /* Contact Form */
        .contact-form {
            background: var(--white);
            padding: 3.5rem;
            border-radius: 4px;
            box-shadow: var(--shadow-lg);
            border: 2px solid transparent;
            transition: var(--transition);
            position: relative;
        }

            .contact-form::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(to right, var(--gold), var(--bronze));
            }

        .form-group {
            margin-bottom: 2rem;
        }

            .form-group label {
                display: block;
                font-family: var(--font-heading);
                font-weight: 600;
                color: var(--text-dark);
                margin-bottom: 0.7rem;
                font-size: 0.95rem;
                letter-spacing: 0.5px;
            }

                .form-group label span {
                    color: var(--gold);
                }

        .form-input,
        .form-textarea,
        .form-select {
            width: 100%;
            padding: 1rem 1.3rem;
            border: 2px solid rgba(201, 168, 106, 0.3);
            border-radius: 4px;
            font-family: var(--font-body);
            font-size: 1rem;
            background: var(--bg-cream);
            color: var(--text-dark);
            transition: var(--transition);
        }

            .form-input:focus,
            .form-textarea:focus,
            .form-select:focus {
                outline: none;
                border-color: var(--gold);
                background: var(--white);
                box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
            }

        .form-textarea {
            resize: vertical;
            min-height: 150px;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }

        .btn-submit {
            width: 100%;
            padding: 1.2rem;
            background: linear-gradient(135deg, var(--gold), var(--bronze));
            color: var(--primary-color);
            border: 2px solid var(--gold);
            border-radius: 4px;
            font-family: var(--font-heading);
            font-weight: 700;
            font-size: 1rem;
            letter-spacing: 1.5px;
            text-transform: uppercase;
            cursor: pointer;
            transition: var(--transition);
            box-shadow: var(--shadow-gold);
            margin-top: 1rem;
        }

            .btn-submit:hover {
                transform: translateY(-3px);
                box-shadow: 0 16px 48px rgba(212, 175, 55, 0.35);
            }

        /* Contact Info */
        .contact-info-section {
            display: flex;
            flex-direction: column;
            gap: 2rem;
        }

        .info-card {
            background: var(--white);
            padding: 2.5rem;
            border-radius: 4px;
            box-shadow: var(--shadow);
            border: 2px solid transparent;
            transition: var(--transition);
        }

            .info-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-lg);
                border-color: rgba(212, 175, 55, 0.3);
            }

        .info-icon {
            width: 65px;
            height: 65px;
            background: linear-gradient(135deg, var(--gold), var(--bronze));
            color: var(--primary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 4px;
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow-gold);
        }

        .info-card h3 {
            font-family: var(--font-display);
            font-size: 1.3rem;
            color: var(--primary-color);
            margin-bottom: 1rem;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .info-card p {
            color: var(--text-medium);
            line-height: 1.8;
            margin-bottom: 0.5rem;
        }

        .info-card a {
            color: var(--gold);
            font-weight: 600;
            transition: var(--transition);
        }

            .info-card a:hover {
                color: var(--bronze);
            }

        /* Map Section */
        .map-section {
            padding: 0;
            height: 500px;
            position: relative;
            border-top: 3px solid var(--gold);
            border-bottom: 3px solid var(--gold);
        }

            .map-section::before {
                content: '';
                position: absolute;
                top: -3px;
                left: 0;
                right: 0;
                height: 3px;
                background: repeating-linear-gradient(90deg, var(--gold) 0px, var(--gold) 12px, transparent 12px, transparent 24px);
            }

        .map-placeholder {
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, var(--bg-parchment), var(--bg-sand));
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-medium);
            font-family: var(--font-heading);
            font-size: 1.2rem;
        }

        /* Social Links */
        .social-section {
            padding: 5rem 0;
            background: var(--bg-cream);
            text-align: center;
        }

        .social-links-large {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin-top: 3rem;
            flex-wrap: wrap;
        }

        .social-link-large {
            width: 80px;
            height: 80px;
            background: var(--white);
            border: 3px solid var(--gold);
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: var(--gold);
            transition: var(--transition);
            box-shadow: var(--shadow);
        }

            .social-link-large:hover {
                background: linear-gradient(135deg, var(--gold), var(--bronze));
                color: var(--primary-color);
                transform: translateY(-8px);
                box-shadow: var(--shadow-lg);
            }

        /* FAQ Section */
        .faq-section {
            padding: 6rem 0;
            background: var(--bg-parchment);
        }

        .faq-container {
            max-width: 900px;
            margin: 0 auto;
        }

        .faq-item {
            background: var(--white);
            margin-bottom: 1.5rem;
            border-radius: 4px;
            overflow: hidden;
            box-shadow: var(--shadow);
            border: 2px solid transparent;
            transition: var(--transition);
        }

            .faq-item:hover {
                border-color: rgba(212, 175, 55, 0.3);
            }

        .faq-question {
            padding: 1.8rem 2.5rem;
            background: var(--white);
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-family: var(--font-heading);
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--primary-color);
            transition: var(--transition);
        }

            .faq-question:hover {
                color: var(--gold);
            }

            .faq-question i {
                color: var(--gold);
                transition: var(--transition);
            }

            .faq-question.active i {
                transform: rotate(180deg);
            }

        .faq-answer {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
            background: var(--bg-cream);
        }

            .faq-answer.active {
                max-height: 500px;
            }

        .faq-answer-content {
            padding: 2rem 2.5rem;
            color: var(--text-medium);
            line-height: 1.9;
        }

        /* Responsive */
        @@media (max-width: 968px) {
            .contact-hero h1

        {
            font-size: 2.5rem;
        }

        .contact-grid {
            grid-template-columns: 1fr;
        }

        .form-row {
            grid-template-columns: 1fr;
        }

        .contact-form {
            padding: 2rem;
        }

        }
    </style>
}

<!-- Hero Section -->
<section class="contact-hero">
    <div class="container">
        <div class="section-ornament">◆ ◇ ◆</div>
        <h1>Contact Us</h1>
        <div class="hero-divider"></div>
        <p>We're here to assist you on your journey through history</p>
    </div>
</section>

<!-- Contact Content -->
<section class="contact-content">
    <div class="container">
        <div class="contact-grid">
            <!-- Contact Form -->
            <div class="contact-form">
                <h2 style="font-family: var(--font-display); font-size: 2rem; margin-bottom: 1.5rem; letter-spacing: 1px;">Send Us a Message</h2>
                <p style="color: var(--text-medium); margin-bottom: 2.5rem;">Have questions about our services, partnerships, or anything else? Fill out the form below and we'll get back to you within 24 hours.</p>

                <form>
                    <div class="form-row">
                        <div class="form-group">
                            <label>First Name <span>*</span></label>
                            <input type="text" class="form-input" placeholder="John" required>
                        </div>
                        <div class="form-group">
                            <label>Last Name <span>*</span></label>
                            <input type="text" class="form-input" placeholder="Doe" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label>Email <span>*</span></label>
                            <input type="email" class="form-input" placeholder="john.doe@example.com" required>
                        </div>
                        <div class="form-group">
                            <label>Phone</label>
                            <input type="tel" class="form-input" placeholder="+1 (555) 123-4567">
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Subject <span>*</span></label>
                        <select class="form-select" required>
                            <option value="">Select a subject</option>
                            <option value="general">General Inquiry</option>
                            <option value="technical">Technical Support</option>
                            <option value="partnership">Partnership Opportunity</option>
                            <option value="feedback">Feedback</option>
                            <option value="booking">Booking Assistance</option>
                            <option value="other">Other</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Message <span>*</span></label>
                        <textarea class="form-textarea" placeholder="Tell us how we can help you..." required></textarea>
                    </div>

                    <button type="submit" class="btn-submit">
                        <i class="fas fa-paper-plane"></i> Send Message
                    </button>
                </form>
            </div>

            <!-- Contact Information -->
            <div class="contact-info-section">
                <div class="info-card">
                    <div class="info-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <h3>Visit Us</h3>
                    <p>123 Heritage Lane<br>Cultural District<br>New York, NY 10001<br>United States</p>
                </div>

                <div class="info-card">
                    <div class="info-icon">
                        <i class="fas fa-phone"></i>
                    </div>
                    <h3>Call Us</h3>
                    <p>Main: <a href="tel:+12345678900">+1 (234) 567-8900</a></p>
                    <p>Support: <a href="tel:+12345678901">+1 (234) 567-8901</a></p>
                    <p>Mon-Fri: 9:00 AM - 6:00 PM EST</p>
                </div>

                <div class="info-card">
                    <div class="info-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <h3>Email Us</h3>
                    <p>General: <a href="mailto:info@museum.com">info@museum.com</a></p>
                    <p>Support: <a href="mailto:support@museum.com">support@museum.com</a></p>
                    <p>Press: <a href="mailto:press@museum.com">press@museum.com</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Map Section -->
<section class="map-section">
    <div class="map-placeholder">
        <div style="text-align: center;">
            <i class="fas fa-map-marked-alt" style="font-size: 3rem; color: var(--gold); margin-bottom: 1rem;"></i>
            <p>Interactive Map Location</p>
            <p style="font-size: 0.9rem; margin-top: 0.5rem;">123 Heritage Lane, Cultural District, NY 10001</p>
        </div>
    </div>
</section>

<!-- Social Media -->
<section class="social-section">
    <div class="container">
        <div class="section-header">
            <div class="section-ornament">◆ ◇ ◆</div>
            <span class="section-tag">Connect With Us</span>
            <h2>Follow Our Journey</h2>
            <div class="hero-divider"></div>
            <p>Stay updated with the latest discoveries and virtual experiences</p>
        </div>

        <div class="social-links-large">
            <a href="#" class="social-link-large" title="Facebook">
                <i class="fab fa-facebook-f"></i>
            </a>
            <a href="#" class="social-link-large" title="Twitter">
                <i class="fab fa-twitter"></i>
            </a>
            <a href="#" class="social-link-large" title="Instagram">
                <i class="fab fa-instagram"></i>
            </a>
            <a href="#" class="social-link-large" title="YouTube">
                <i class="fab fa-youtube"></i>
            </a>
            <a href="#" class="social-link-large" title="LinkedIn">
                <i class="fab fa-linkedin-in"></i>
            </a>
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section class="faq-section">
    <div class="container">
        <div class="section-header">
            <div class="section-ornament">◆ ◇ ◆</div>
            <span class="section-tag">Common Questions</span>
            <h2>Frequently Asked</h2>
            <div class="hero-divider"></div>
            <p>Quick answers to questions you may have</p>
        </div>

        <div class="faq-container">
            <div class="faq-item">
                <div class="faq-question">
                    <span>How do I book museum tickets?</span>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="faq-answer">
                    <div class="faq-answer-content">
                        Navigate to the Museums page, select your desired museum, choose your preferred date and time, and complete the booking process. You'll receive instant confirmation via email with your digital tickets.
                    </div>
                </div>
            </div>

            <div class="faq-item">
                <div class="faq-question">
                    <span>Are virtual tours free?</span>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="faq-answer">
                    <div class="faq-answer-content">
                        We offer both free and premium virtual tours. Free tours provide 360° viewing experiences, while premium tours include expert narration, interactive elements, and exclusive content. Check individual tour pages for pricing details.
                    </div>
                </div>
            </div>

            <div class="faq-item">
                <div class="faq-question">
                    <span>Can I cancel or modify my booking?</span>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="faq-answer">
                    <div class="faq-answer-content">
                        Yes, you can modify or cancel bookings up to 48 hours before your scheduled visit. Full refunds are provided for cancellations made within this timeframe. Log into your account to manage your bookings.
                    </div>
                </div>
            </div>

            <div class="faq-item">
                <div class="faq-question">
                    <span>Do you offer group discounts?</span>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="faq-answer">
                    <div class="faq-answer-content">
                        Yes, we offer special rates for groups of 10 or more. Educational institutions receive additional discounts. Contact our sales team at groups@museum.com for custom pricing and arrangements.
                    </div>
                </div>
            </div>

            <div class="faq-item">
                <div class="faq-question">
                    <span>What technology do I need for virtual tours?</span>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="faq-answer">
                    <div class="faq-answer-content">
                        Our virtual tours work on any modern web browser (Chrome, Firefox, Safari, Edge). For the best experience, we recommend a desktop or laptop computer. VR-ready tours require a VR headset compatible with WebVR.
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script>
        // FAQ Accordion
        document.querySelectorAll('.faq-question').forEach(question => {
            question.addEventListener('click', function() {
                const answer = this.nextElementSibling;
                const isActive = this.classList.contains('active');

                // Close all FAQs
                document.querySelectorAll('.faq-question').forEach(q => {
                    q.classList.remove('active');
                    q.nextElementSibling.classList.remove('active');
                });

                // Open clicked FAQ if it wasn't active
                if (!isActive) {
                    this.classList.add('active');
                    answer.classList.add('active');
                }
            });
        });

        // Form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Thank you for your message! We will respond within 24 hours.');
            this.reset();
        });
    </script>
}
